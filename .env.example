# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Bank API Configuration
BANK_CLIENT_ID=your_bank_client_id_here
BANK_CLIENT_SECRET=your_bank_client_secret_here
BANK_REDIRECT_URI=https://localhost:8443/callback

# Security Configuration
SECRET_KEY=generate_a_secure_random_key_here
TOKEN_ENCRYPTION_KEY=another_secure_key_for_token_encryption

# Application Settings
LOG_LEVEL=INFO
DEBUG=False

# OAuth Settings
OAUTH_TIMEOUT=30
OAUTH_RETRY_ATTEMPTS=3

# Local HTTPS callback certificate (PEM) and key (PEM)
TLS_CERT_PATH=./certs/dev-localhost.crt
TLS_KEY_PATH=./certs/dev-localhost.key

# Dashboard Settings
CONSOLE_OUTPUT_FORMAT=table
DATA_REFRESH_INTERVAL=300